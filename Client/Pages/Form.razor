@page "/"
@using Nordic_Door.Shared.Models.Database;
@inject HttpClient httpClient
@using System.ComponentModel.DataAnnotations

@using System.ComponentModel.DataAnnotations

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
<DataAnnotationsValidator/>
<MudGrid>
    <MudItem xs="12" sm="7">
        <MudCard>
            <MudCardContent>
                <MudTextField Label="Title" HelperText="Max. 25 characters"
                              @bind-Value="model.Title" For="@(() => model.Title)"/>

                <MudTextField Label="Employee" HelperText= "Write your full name" Class="mt-3"
                              @bind-Value="model.Employee" For="@(() => model.Employee)"/>

                <MudTextField Label="Problem" HelperText="Describe the Problem" Class="mt-3"
                              @bind-Value="model.Problem" For="@(() => model.Problem)" />

                <MudTextField Label="Cause" HelperText="Describe the Cause of the Problem" Class="mt-3"
                              @bind-Value="model.Cause" For="@(() => model.Cause)" />

                <MudTextField Label="Solution" HelperText="How should the problem be solved?" Class="mt-3"
                              @bind-Value="model.Solution" For="@(() => model.Solution)" />
                
                
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Register</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="5">
        <MudPaper Class="pa-4 mud-height-full">
            <MudText Typo="Typo.subtitle2">suggestion status</MudText>
            @if (success)
            {
                <MudText Color="Color.Success">Your suggestion has been forwarded</MudText>
            }
            else
            {
                <MudText Color="@Color.Error">
                    <ValidationSummary />
                </MudText>
            }
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.body2" Align="Align.Center">
            Fill out the form correctly to see send in your suggestion.
        </MudText>
    </MudItem>
</MudGrid>
</EditForm>


@code {
    RegisterAccountForm model = new RegisterAccountForm();
    bool success;

    public class RegisterAccountForm
    {
        [Required]
        [StringLength(25, ErrorMessage = "Title length can't be more than 25.")]
        public string Title { get; set; }

        [Required]
        public string Employee { get; set; }

        [Required]
        [StringLength(250, ErrorMessage = "Description must be at least 25 characters long.", MinimumLength = 25)]
        public string Problem { get; set; }

        [Required]
        public string Cause { get; set; }

        [Required]
        public string Solution { get; set; }

    }

    private void OnValidSubmit(EditContext context)
    {
        success = true;
        StateHasChanged();
    }

}